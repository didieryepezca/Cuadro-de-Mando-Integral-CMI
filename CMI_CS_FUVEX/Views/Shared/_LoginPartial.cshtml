@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav list-inline">
        @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Administrar">Bienvenido <strong>@User.Identity.Name</strong> !</a>
            </li>


            <li style="align-items:center">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <span class="badge badge-warning"> <button type="submit" class="">Cerrar Sesion</button></span>
                </form>
            </li>



        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"><strong>Registrar</strong></a>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><strong>Login</strong></a>
            </li>

        }
    </ul>
